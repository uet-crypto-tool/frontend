    </head>

    <body>


        <%- include('../partials/header.ejs') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-content">
                        <!-- ***** Most Popular Start ***** -->
                        <div class="heading-section">
                            <h4>Welcome to Hello</h4>
                        </div>
                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Cryptosystem Construction</h4>
                                    </div>
                                    <div class="col-12">
                                        <div class="crypto-systems-input">
                                            <form class="parameter-input" id="build-form">
                                                Enter p: <input
                                                    class="col-lg-10"
                                                    type="text"
                                                    placeholder="Type p"
                                                    id="p-input"
                                                    name="p-number"

                                                />
                                                Enter q: <input
                                                    class="col-lg-10"
                                                    type="text"
                                                    placeholder="Type q"
                                                    id="q-input"
                                                    name="q-number"

                                                />
                                                <div class="text-center mt-3">
                                                    <button class="btn btn-primary" type="submit">Build</button>
                                                    <button class="btn btn-primary" onclick="autoGenCrypSys()">Auto Generate</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Key Distribution</h4>
                                    </div>
                                    <div class="col-12">
                                        <div class="crypto-systems-input">
                                            <h4 class="text-white fs-4 fw-bold">Public key:</h4>
                                            <div class="result-box">
                                                <label for="d-result">n:</label>
                                                <input type="text" id="n-result" readonly>
                                                <button onclick="copyToClipboard('n-result')">Copy</button>
                                            </div>
                                            <div class="result-box">
                                                <label for="b-result">b:</label>
                                                <input type="text" id="b-result" readonly>
                                                <button onclick="copyToClipboard('e-result')">Copy</button>
                                            </div>
                                            <h4 class="text-white fs-4 fw-bold">Private key:</h4>
                                            <div class="result-box">
                                                <label for="a-result">a:</label>
                                                <input type="text" id="a-result" readonly>
                                                <button onclick="copyToClipboard('a-result')">Copy</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Signing</h4>
                                    </div>
                                    <div class="flex-direction: column">
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Message (alphabet):</h4>
                                            <textarea id="plain-alphabet-encrypt" placeholder="Type here" class="text-area-large"></textarea>
                                        </div>
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Message (Integer):</h4>
                                            <textarea id="plain-integer-encrypt" class="text-area-large"  readonly></textarea>
                                        </div>
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Signature:</h4>
                                            <textarea id="cipher-integer-encrypt" class="text-area-large" readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button class="btn btn-primary" onclick="sign()">Create signature</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Verifying</h4>
                                    </div>
                                    <div class="flex-direction: column">
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Message (Integer):</h4>
                                            <textarea placeholder="Type here" id="message-integer-verify" class="text-area-large" ></textarea>
                                        </div>
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Signature:</h4>
                                            <textarea placeholder="Type here" class="text-area-large"  id="message-signature-verify"></textarea>
                                        </div>
                                        <div class="col-12">
                                            <h4 class="text-white fs-4 fw-bold">Verification Result:</h4>
                                            <textarea readonly id="result-signature-verify" class="text-area-large"></textarea>
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button class="btn btn-primary" onclick="verify()">Verify signature</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Scripts -->
        <!-- Bootstrap core JavaScript -->
        <script src="../vendor/jquery/jquery.min.js"></script>
        <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="../assets/js/isotope.min.js"></script>
        <script src="../assets/js/owl-carousel.js"></script>
        <script src="../assets/js/tabs.js"></script>
        <script src="../assets/js/popup.js"></script>
        <script src="../assets/js/custom.js"></script>
        <script src="../assets/js/cryptosignature/rsa.js"></script>
    </body>
</html>
