    <body>


        <%- include('../partials/header.ejs') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-content">
                        <!-- ***** Most Popular Start ***** -->
                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Welcome to Elliptic Curve</h4>
                                    </div>
                                    <div class="col-12">
                                        <div class="crypto-systems-creation">
                                            <div class="crypto-systems-input" style="display: flex; flex-direction: column;">
                                                <h4 style="color: aqua;">Enter parameters</h4>
                                                <form class="parameter-input" action="#">
                                                    Enter p: <input
                                                        class="col-lg-5"
                                                        type="text"
                                                        placeholder="Type p"
                                                        id="p-input"
                                                        name="p-number"
                                                        onkeypress="handle"
                                                    />
                                                    Enter a: <input
                                                        class="col-lg-5"
                                                        type="text"
                                                        placeholder="Type a"
                                                        id="a-input"
                                                        name="a-number"
                                                        onkeypress="handle"
                                                    />
                                                    Enter b: <input
                                                        class="col-lg-5"
                                                        type="text"
                                                        placeholder="Type b"
                                                        id="b-input"
                                                        name="b-number"
                                                        onkeypress="handle"
                                                    />
                                                </form>
                                            </div>
                                            <div class="crypto-systems-stats">
                                                <h3 style="color:aqua">Stats</h3>
                                                <div class="crypto-systems-stats-item">
                                                    <h4>Elliptic Curve</h4>
                                                    <p id="ecc">y^2 = x^3 + ax + b</p>
                                                </div>
                                                <div class="crypto-systems-stats-item">
                                                    <h4>Point Addition</h4>
                                                    <p id="point-addition">P + Q = R</p>
                                                </div>
                                                <div class="crypto-systems-stats-item">
                                                    <h4>Point Doubling</h4>
                                                    <p id="point-doubling">P + P = R</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Key Distribution</h4>
                                    </div>
                                    <div class="col-12">
                                        <div class="crypto-systems-input">
                                            <h4 class="text-white fs-4 fw-bold">Public key:</h4>
                                            <div class="result-box">
                                                <label for="d-result">n:</label>
                                                <input type="text" id="n-result" readonly>
                                                <button onclick="copyToClipboard('n-result')">Copy</button>
                                            </div>
                                            <div class="result-box">
                                                <label for="e-result">e:</label>
                                                <input type="text" id="e-result" readonly>
                                                <button onclick="copyToClipboard('e-result')">Copy</button>
                                            </div>
                                            <h4 class="text-white fs-4 fw-bold">Private key:</h4>
                                            <div class="result-box">
                                                <label for="d-result">d:</label>
                                                <input type="text" id="d-result" readonly>
                                                <button onclick="copyToClipboard('d-result')">Copy</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Encryption</h4>
                                    </div>
                                    <div class="flex-direction: row">
                                        <div class="col-6">
                                            <h4 class="text-white fs-4 fw-bold">Plain text:</h4>
                                            <textarea class="text-area-large"></textarea>
                                        </div>
                                        <div class="col-6">
                                            <h4 class="text-white fs-4 fw-bold">Encrypted text:</h4>
                                            <textarea class="text-area-large" readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button class="btn btn-primary" onclick="encryptText()">Encrypt</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="all-crypto-systems">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="heading-section">
                                        <h4>Decryption</h4>
                                    </div>
                                    <div class="flex-direction: row">
                                        <div class="col-6">
                                            <h4 class="text-white fs-4 fw-bold">Encrypted text:</h4>
                                            <textarea class="text-area-large"></textarea>
                                        </div>
                                        <div class="col-6">
                                            <h4 class="text-white fs-4 fw-bold">Plain text:</h4>
                                            <textarea class="text-area-large" readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button class="btn btn-primary" onclick="decryptText()">Decrypt</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Scripts -->
        <!-- Bootstrap core JavaScript -->
        <script src="../vendor/jquery/jquery.min.js"></script>
        <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="../assets/js/isotope.min.js"></script>
        <script src="../assets/js/owl-carousel.js"></script>
        <script src="../assets/js/tabs.js"></script>
        <script src="../assets/js/popup.js"></script>
        <script src="../assets/js/custom.js"></script>
    </body>
</html>
